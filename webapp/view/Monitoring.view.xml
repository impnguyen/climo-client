		<!-- table of errors, logs or messages -->
		<f:content>
			<t:Table
				rows="{ path: '/z_c_climo_error', lenght: 50, sorter: { path: 'timestamp', descending: true }, parameters: { expand : 'to_Type'} }"
				title="EintrÃ¤ge" selectionMode="None" visibleRowCount="25" editable="false" enableGrouping="true" enableColumnFreeze="true" enableCellFilter="true" enableCustomFilter="true">
				<t:columns>
					<t:Column width="20rem">
						<Label text="Nachricht" />
						<t:template>
							<Text text="{message}" wrapping="true" />
						</t:template>
					</t:Column>
					<t:Column width="8rem">
						<Label text="Anwender" />
						<t:template>
							<Text text="{client_user}" />
						</t:template>
					</t:Column>
					<t:Column width="4rem" hAlign="End">
						<Label text="Typ" />
						<t:template>
							<Label text="{type}" />
						</t:template>
					</t:Column>
					<t:Column width="9rem">
						<Label text="App" />
						<t:template>
							<Button text="{path_name}" press="onPressApp"
								type="Transparent" />
						</t:template>
					</t:Column>
					<t:Column width="11rem">
						<Label text="Timestamp" />
						<t:template>
							<Label
								text="{ path : 'timestamp', type : 'sap.ui.model.type.DateTime', formatOptions : { pattern: 'dd.MM.yyyy HH:mm:ss' } }"
								wrapping="false" />
						</t:template>
					</t:Column>
					<t:Column width="9rem">
						<Label text="Source" />
						<t:template>
							<Button text="{source}" press="onPressSource"
								type="Transparent" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</f:content>
		<!-- DynamicPage Footer -->
		<f:footer>
			<OverflowToolbar>
				<Button icon="sap-icon://message-popup"
					text="{/messagesLength}" type="Emphasized"
					press="onMessageButtonPress" visible="{= !!${/messagesLength}}" />
				<ToolbarSpacer />
				<Button type="Accept" text="Accept" />
				<Button type="Reject" text="Reject" />
			</OverflowToolbar>
		</f:footer>
